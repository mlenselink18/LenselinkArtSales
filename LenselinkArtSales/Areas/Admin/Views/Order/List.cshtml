@model List<OrderListViewModel>
@{
    ViewBag.Title = "Order Manager";
}

<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Items Ordered</th>
                    <th>Order Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.order.Id</td>
                        <td>@p.customer.FirstLastname</td>
                        <td>@p.orderItemCount</td>
                        <td>@p.order.OrderDate</td>
                        <td>
                            <a asp-action="Update"
                               asp-route-id="@p.order.Id">Update</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="AddOrder" class="btn btn-primary">Create New Order</a>
    </div>
</div>
<!-- this view is used for the Add action and the Update action -->
@model User
@{
    string title = ViewBag.Action + " User";
    ViewBag.Title = title;    // sets title to "Add Product" or "Update Product"
}

<!-- since this view uses validation, it should provide the validation scripts 
     so these scripts can be inserted into the layout -->
@section scripts {
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/
                       jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="StreetAddress">Street Address</label>
        <input asp-for="StreetAddress" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Zip">Zip</label>
        <input asp-for="Zip" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="RoleId">Role ID</label>
        <select asp-for="RoleId"
                asp-items="@(new SelectList(ViewBag.Roles,
                         "Id", "RoleDescription",
                         Model.RoleId.ToString()))"
                class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="SecurityQuestionID">Security Question</label>
        <select asp-for="SecurityQuestionID"
                asp-items="@(new SelectList(ViewBag.questions,
                         "Id", "QuestionText",
                         Model.SecurityQuestionID.ToString()))"
                class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Active">Active</label>
        <select asp-for="Active" class="form-control">
            <option value="True">Active</option>
            <option value="False">Inactive</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SecurityAnswer">Security Answer</label>
        <input asp-for="SecurityAnswer" class="form-control">
    </div>

    <input type="hidden" asp-for="Id" />
    <br />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>